<?xml version='1.0' encoding='utf-8'?>
<widget id="com.voanews.voazh" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name short="美国之声">VOAChinese</name>
    <description>
        美国之音将代表整个美国，而不是美国社会的个别阶层。所以，美国之音将平衡、全面地反映重要的美国思想和体制。
    </description>
    <author email="chinese@voanews.com" href="https://www.voachinese.com/">
        普通话组
    </author>
    <preference name="Orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashScreenDelay" value="50" />
    <preference name="FadeSplashScreenDuration" value="50" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <hook src="hooks/copy-build-extras-gradle.js" type="before_build" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="AllowInlineMediaPlayback" value="true" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-plugin-splashscreen" spec="^1.0.9" />
    <plugin name="adobe-mobile-services" spec="^4.13.1-cor" />
    <plugin name="psiphon-cordova-plugin" spec="^0.4.0" />
    <plugin name="cordova-plugin-fullscreen" spec="^1.2.0" />
    <plugin name="ionic-plugin-keyboard" spec="^2.2.1" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="^2.3.0">
        <variable name="XWALK_VERSION" value="23+" />
        <variable name="XWALK_LITEVERSION" value="xwalk_core_library_canary:17+" />
        <variable name="XWALK_COMMANDLINE" value="--disable-pull-to-refresh-effect" />
        <variable name="XWALK_MODE" value="embedded" />
        <variable name="XWALK_MULTIPLEAPK" value="false" />
    </plugin>
    <plugin name="cordova-plugin-x-socialsharing" spec="^5.2.1" />
    <plugin name="cordova-pdf-generator" spec="^1.7.1" />
    <plugin name="cordova-plugin-local-notification" spec="^2.0.1" />
    <plugin name="cordova-plugin-badge" spec="^1.0.9" />
    <plugin name="cordova-plugin-add-swift-support" spec="^1.7.1" />
    <plugin name="cordova-wheel-selector-plugin" spec="^1.0.9" />
    <engine name="android" spec="^6.3.0" />
    <engine name="ios" spec="^4.5.4" />
</widget>
